<%- include('partials/header', { title, user }) %>

<section class="auth-card">
  <h1>Uye Ol</h1>
  <% if (error) { %>
  <p class="message error"><%= error %></p>
  <% } %>
  <form action="/register" method="post" class="stack">
    <label>
      Kullanici Adi
      <input type="text" name="username" required />
    </label>
    <label>
      Sifre
      <input type="password" name="password" minlength="6" required />
    </label>
    <label>
      Sifre Tekrar
      <input type="password" name="passwordConfirm" minlength="6" required />
    </label>
    <button type="submit" class="btn">Kayit Ol</button>
  </form>
  <p class="muted">Zaten uyeyim. <a href="/login">Giris yap</a></p>
</section>

<%- include('partials/footer') %>
